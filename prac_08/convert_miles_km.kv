BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: app.input_miles
            size_hint_x: .8
            on_text: app.handle_convert_miles_to_km()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .2
            Button:
                text: 'Up (+1)'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down (-1)'
                on_press: app.handle_increment(-1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_convert_miles_to_km()
    Label:
        id: output_label
        text: 'Kilometres output'
        color: (1, 1, 0, 1)